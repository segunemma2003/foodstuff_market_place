{
  "name": "FoodStuff Store API",
  "description": "Laravel API for FoodStuff Store marketplace",
  "repository": "https://github.com/yourusername/foodstuff-marketplace",
  "logo": "https://via.placeholder.com/150x150/4CAF50/FFFFFF?text=FS",
  "keywords": ["laravel", "php", "marketplace", "api"],
  "website": "https://marketplace.foodstuff.store",
  "env": {
    "APP_NAME": {
      "description": "Application name",
      "value": "FoodStuff Store",
      "required": true
    },
    "APP_ENV": {
      "description": "Application environment",
      "value": "production",
      "required": true
    },
    "APP_KEY": {
      "description": "Laravel application key",
      "generator": "secret",
      "required": true
    },
    "APP_DEBUG": {
      "description": "Debug mode",
      "value": "false",
      "required": true
    },
    "APP_URL": {
      "description": "Application URL",
      "value": "https://foodstuff-store-api.herokuapp.com",
      "required": true
    },
    "APP_FRONTEND_URL": {
      "description": "Frontend URL",
      "value": "https://marketplace.foodstuff.store",
      "required": true
    },
    "LOG_CHANNEL": {
      "description": "Log channel",
      "value": "stack",
      "required": true
    },
    "DB_CONNECTION": {
      "description": "Database connection",
      "value": "postgresql",
      "required": true
    },
    "CACHE_DRIVER": {
      "description": "Cache driver",
      "value": "file",
      "required": true
    },
    "QUEUE_CONNECTION": {
      "description": "Queue connection",
      "value": "sync",
      "required": true
    },
    "SESSION_DRIVER": {
      "description": "Session driver",
      "value": "file",
      "required": true
    },
    "SESSION_LIFETIME": {
      "description": "Session lifetime",
      "value": "120",
      "required": true
    },
    "FILESYSTEM_DISK": {
      "description": "Filesystem disk",
      "value": "s3",
      "required": true
    },
    "AWS_ACCESS_KEY_ID": {
      "description": "AWS Access Key ID",
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "description": "AWS Secret Access Key",
      "required": true
    },
    "AWS_DEFAULT_REGION": {
      "description": "AWS Default Region",
      "value": "us-east-1",
      "required": true
    },
    "AWS_BUCKET": {
      "description": "AWS S3 Bucket",
      "required": true
    },
    "AWS_URL": {
      "description": "AWS S3 URL",
      "required": true
    },
    "AWS_USE_PATH_STYLE_ENDPOINT": {
      "description": "AWS Path Style Endpoint",
      "value": "false",
      "required": true
    },
    "PAYSTACK_SECRET_KEY": {
      "description": "Paystack Secret Key",
      "required": true
    },
    "PAYSTACK_PUBLIC_KEY": {
      "description": "Paystack Public Key",
      "required": true
    },
    "PAYSTACK_BASE_URL": {
      "description": "Paystack Base URL",
      "value": "https://api.paystack.co",
      "required": true
    },
    "RESEND_KEY": {
      "description": "Resend Email API Key",
      "required": true
    },
    "TERMII_API_KEY": {
      "description": "Termii API Key",
      "required": true
    },
    "TERMII_CHANNEL_ID": {
      "description": "Termii Channel ID",
      "value": "whatsapp",
      "required": true
    },
    "TERMII_SENDER_ID": {
      "description": "Termii Sender ID",
      "value": "FoodStuff",
      "required": true
    },
    "WHATSAPP_BOT_URL": {
      "description": "WhatsApp Bot URL",
      "value": "https://foodstuff-whatsapp-bot-6536aa3f6997.herokuapp.com",
      "required": true
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/php"
    }
  ],
  "scripts": {
    "postdeploy": "php artisan migrate --force && php artisan db:seed --force"
  }
}

