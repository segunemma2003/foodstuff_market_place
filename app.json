{
  "name": "FoodStuff Store API",
  "description": "WhatsApp bot-driven foodstuff marketplace API",
  "repository": "https://github.com/yourusername/foodstuff-marketplace",
  "logo": "https://via.placeholder.com/150x150/4CAF50/FFFFFF?text=FS",
  "keywords": ["laravel", "php", "whatsapp", "marketplace", "api", "nodejs"],
  "website": "https://marketplace.foodstuff.store",
  "env": {
    "APP_NAME": {
      "description": "Application name",
      "value": "FoodStuff Store",
      "required": true
    },
    "APP_ENV": {
      "description": "Application environment",
      "value": "production",
      "required": true
    },
    "APP_KEY": {
      "description": "Laravel application key",
      "generator": "secret",
      "required": true
    },
    "APP_DEBUG": {
      "description": "Debug mode",
      "value": "false",
      "required": true
    },
    "APP_URL": {
      "description": "Application URL",
      "value": "https://your-app-name.herokuapp.com",
      "required": true
    },
    "APP_FRONTEND_URL": {
      "description": "Frontend URL",
      "value": "https://marketplace.foodstuff.store",
      "required": true
    },
    "LOG_CHANNEL": {
      "description": "Log channel",
      "value": "stack",
      "required": true
    },
    "DB_CONNECTION": {
      "description": "Database connection",
      "value": "postgresql",
      "required": true
    },
    "CACHE_DRIVER": {
      "description": "Cache driver",
      "value": "file",
      "required": true
    },
    "QUEUE_CONNECTION": {
      "description": "Queue connection",
      "value": "sync",
      "required": true
    },
    "SESSION_DRIVER": {
      "description": "Session driver",
      "value": "file",
      "required": true
    },
    "SESSION_LIFETIME": {
      "description": "Session lifetime",
      "value": "120",
      "required": true
    },
    "FILESYSTEM_DISK": {
      "description": "Filesystem disk",
      "value": "s3",
      "required": true
    },
    "AWS_ACCESS_KEY_ID": {
      "description": "AWS Access Key ID",
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "description": "AWS Secret Access Key",
      "required": true
    },
    "AWS_DEFAULT_REGION": {
      "description": "AWS Default Region",
      "value": "us-east-1",
      "required": true
    },
    "AWS_BUCKET": {
      "description": "AWS S3 Bucket",
      "required": true
    },
    "AWS_URL": {
      "description": "AWS S3 URL",
      "required": true
    },
    "AWS_USE_PATH_STYLE_ENDPOINT": {
      "description": "AWS Path Style Endpoint",
      "value": "false",
      "required": true
    },
    "PAYSTACK_SECRET_KEY": {
      "description": "Paystack Secret Key",
      "required": true
    },
    "PAYSTACK_PUBLIC_KEY": {
      "description": "Paystack Public Key",
      "required": true
    },
    "PAYSTACK_BASE_URL": {
      "description": "Paystack Base URL",
      "value": "https://api.paystack.co",
      "required": true
    },
    "RESEND_KEY": {
      "description": "Resend Email API Key",
      "required": true
    },
    "NODE_ENV": {
      "description": "Node.js environment",
      "value": "production",
      "required": true
    },
    "WHATSAPP_BOT_PORT": {
      "description": "WhatsApp bot port",
      "value": "3000",
      "required": true
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/php"
    }
  ],
  "scripts": {
    "postdeploy": "php artisan migrate --force && php artisan db:seed --force && npm install"
  }
}
